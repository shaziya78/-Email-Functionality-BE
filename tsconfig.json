{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true
    },
    "include": ["./**/*.ts"],  // This includes all TypeScript files in the current directory and subdirectories
    "exclude": ["node_modules", "dist"]
  }
  